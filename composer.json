{
    "name": "ShopwareHackathon/composer-plugin-new",
    "description": "a test plugin depending on stuff",
    "type": "shopware-plugin",
    "autoload": {
        "psr-4": {
            "HackPluginNew\\": ""
        }
    },
    "require": {
        "league/route": "^2.0",
        "league/climate": "^3.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jan Pietrzyk",
            "email": "jp@shopware.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "post-status-cmd": [
            "touch /bin-da.txt"
        ],
        "post-install-cmd": [
            "touch /bin-da.txt",
            "php bin/console sw:plugin:refresh",
            "php bin/console sw:plugin:install HackPluginNew",
            "php bin/console sw:plugin:activate HackPluginNew"
        ],
        "post-update-cmd": [
            "php bin/console sw:plugin:update HackPluginNew"
        ]
    }
}
